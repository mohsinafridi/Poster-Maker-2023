@page

@model PosterMaker.UI.Pages.Category.IndexModel
@using PosterMaker.UI.Models

@{
    ViewData["Title"] = "Category List";
}
<div class="container">

    <div>
        <h4>Category List</h4>
        <a class="btn btn-default" href="/Category/CreateCategory" style="float:right;border:1px solid Green;margin: -3px 0px 0px 0px;">Add a new Category</a>
    </div>

    <div class="table-responsive">
        <table cellpadding="0" cellspacing="0" class="table  table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>App Name</th>
            <th>Image</th>          
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item?.Name</td>
                <td>@item?.App?.Name</td>
                <td>
                    <img src="@item?.ThumbnailPath"
                         alt='@item?.Name'
                         class='img-fluid'>
                </td>              
                <td>@item?.CreatedAt</td>
                <td>Edit | Delete</td>
            </tr>
        }
        </table>
    </div>
