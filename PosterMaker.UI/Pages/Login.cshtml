@page "/"
@model PosterMaker.UI.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">

    <form method="post">
        <div class="form-group">
            <label asp-for="LoginVm.Username">Username:</label>
            <input asp-for="LoginVm.Username" class="form-control" id="UserName" />
            <span class="alert-danger" asp-validation-for="LoginVm.Username"></span>
        </div>

        <div class="form-group mb-3a">
            <label asp-for="LoginVm.Password">Password:</label>
            <input asp-for="LoginVm.Password" class="form-control" id="Password" />
            <span class="alert-danger" asp-validation-for="LoginVm.Password"></span>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>