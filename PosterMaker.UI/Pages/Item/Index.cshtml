@page
@model PosterMaker.UI.Pages.Item.IndexModel
@using PosterMaker.UI.Models


@{
    ViewData["Title"] = "Item List";
}
<div class="container">
 
    <div>
        <a class="btn btn-default" href="/Item/CreateItem" style="float:right;border:1px solid Green;margin: -3px 0px 0px 0px;">Add a new Item</a>
        <h4>Item List</h4>
       
    </div>
    <div class="table-responsive">
        <table cellpadding="0" cellspacing="0" class="table  table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Json</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
        @foreach (Item item in Model.ItemList)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>
                    <img src="@item.ThumbnailPath"
                         alt='@item.ItemName'
                         class='img-fluid'>
                </td>
                <td> <a href="@item.JsonPath" download="@item.JsonPath">Download File</a></td>
                <td>@item.CreatedAt</td>
                <td>Edit | Delete</td>
            </tr>
        }
    </table>
    
    </div>
    
    
    
    
