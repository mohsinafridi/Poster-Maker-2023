@page
@model PosterMaker.UI.Pages.App.IndexModel
@{
}


<div class="container">
    <div class="row">
        <a class="btn btn-default" href="/App/Create">Create new app</a>
        @foreach (var item in Model.AppList)
        {
            <div class="col-md-3 m-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>