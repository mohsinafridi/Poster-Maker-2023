@page
@model PosterMaker.UI.Pages.App.IndexModel
@{
}


<div class="container">
    <div class="row">
        <a class="btn btn-default" href="/App/CreateApp">Create new app</a>
        @foreach (var item in Model.AppList)
        {
          
            <div class="col-md-3 m-1">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <img src="data:image;base64,@System.Convert.ToBase64String(item.Content)" alt='' class='img-fluid'>
                        <span class="card-title">@item.CreatedAt</span>
                    </div>
                </div>
            </div>
              
        }
    </div>
    
</div>




@section Scripts{
    <script>
        $(function () {
            $('#btn-test').on('click', function () {
                window.location.href = "/App/AppCategoryList";
            });
        });
    </script>
}